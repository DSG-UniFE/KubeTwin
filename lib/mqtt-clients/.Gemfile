# Gemfile

source 'https://rubygems.org'

# Gems listed with versions where necessary
gem 'mqtt'                       # MQTT gem for communication
gem 'json'                      # JSON parser/generator
gem 'yaml'                      # YAML parser (default Ruby library)
gem 'open3'                     # Standard library for capturing stdout/stderr
gem 'fileutils'                 # Standard library for file operations
gem 'securerandom'              # Standard library for generating random values
gem 'base64'                    # Standard library for encoding/decoding Base64
gem 'digest'                    # Standard library for creating digests (hashes)
gem 'logger'                    # Standard library for logging messages


